@page
@model EditProductModel
@{
    ViewData["Title"] = "Edit Product";
}

<div>
    <h1 class="display-4">Create Product</h1>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3 row">
            <label asp-for="@Model.product.ProductId" class="control-label col-sm-2">ProductId : </label>
            <div class="col-sm-4">
                <input readonly asp-for="@Model.product.ProductId" class="form-control">
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="@Model.product.ProductName" class="control-label  col-sm-2">ProductName : </label>
            <div class="col-sm-4">
                <input asp-for="@Model.product.ProductName" class="form-control">
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="@Model.product.Quantity" class="control-label  col-sm-2">Quantity : </label>
            <div class="col-sm-4">
                <input asp-for="@Model.product.Quantity" class="form-control">
            </div>
        </div>
        <div class="mb-3 row align-content-lg-end">
            <label class="control-label  col-sm-2"> </label>
            <div class="col-sm-2">
                <input type="submit" value="Update" asp-asp-page-handler="submit" class="form-control btn btn-primary">
            </div>
        </div>
    </form>


    <div>
        <a class="btn btn-primary" role="button" asp-page="/ProductViews/ProductIndex">Back to List</a>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>
